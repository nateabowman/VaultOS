# VaultOS Container Image
# Base image for VaultOS containers

FROM fedora:latest

# Install VaultOS components
RUN dnf install -y \
    vaultos-shell \
    vaultos-terminal \
    vaultos-themes \
    vaultwm \
    alacritty \
    firefox \
    && dnf clean all

# Set up user
RUN useradd -m -s /bin/bash vaultdweller
USER vaultdweller
WORKDIR /home/vaultdweller

# Set environment
ENV DISPLAY=:0
ENV TERM=xterm-256color

# Default command
CMD ["/bin/bash"]

